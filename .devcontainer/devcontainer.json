// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose

{
	"name": "hw_hermes",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "hw-dbt-dev",
	"workspaceFolder": "/usr/app/dbt",
	"customizations": {
	  "vscode": {
		"settings": {
		"editor.guides.bracketPairs": true,
		"editor.bracketPairColorization.enabled": true,
		"editor.fontFamily": "Fira Code",
		"editor.fontLigatures": true,
		"terminal.integrated.fontFamily":"'Meslo for Powerline'",
		"editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
         "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
	},
	 "dbt.queryLimit": 200,
		  "dbt.versionCheck": "status bar",
		  "dbt.sqlFmtPath": "/usr/local/bin/sqlfmt",
		  "sqlfluff.executablePath": "/usr/local/bin/sqlfluff",
		  "sqlfluff.format.enabled": false,
		  "python.defaultInterpreterPath": "/usr/local/bin/python",
		  "files.associations": {
			"*.sql": "jinja-sql"
		  },
		  "terminal.integrated.env.linux": {
			"DBT_PROFILES_DIR": "."
		  },
		  "[jinja-sql]": {
			"editor.defaultFormatter": "innoverio.vscode-dbt-power-user",
			"editor.formatOnSave": true
		  }
		},
		"extensions": [
			"eamodio.gitlens",
			"bastienboutonnet.vscode-dbt",
			"dorzey.vscode-sqlfluff",
			"github.vscode-github-actions",
			"innoverio.vscode-dbt-power-user",
			"mhutchie.git-graph",
			"ms-azuretools.vscode-docker",
			"ms-python.python",
			"ms-python.vscode-pylance",
			"samuelcolvin.jinjahtml",
			"Gruntfuggly.todo-tree"
		]
	  }
	}
  }